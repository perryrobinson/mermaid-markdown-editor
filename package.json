{
  "name": "mermaid-markdown-editor",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run dev:server & bun run dev:spa",
    "dev:server": "bun run --filter @mermaid-editor/server dev",
    "dev:spa": "bun run --filter @mermaid-editor/spa dev",
    "build": "bun run --filter @mermaid-editor/spa build",
    "build:dist": "bun scripts/build.ts",
    "start": "NODE_ENV=production bun run --filter @mermaid-editor/server start",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "bunx @biomejs/biome lint packages/",
    "lint:fix": "bunx @biomejs/biome lint --write packages/"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "typescript": "^5.9.3"
  }
}
