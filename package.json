{
  "name": "mermaid-markdown-editor",
  "version": "0.1.0",
  "module": "src/server/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run build:client && bun run src/server/index.ts",
    "build:client": "bun run typecheck && bun build src/client/main.ts --outdir public --outfile main.js --minify && cp src/client/index.html src/client/styles.css public/",
    "build:dist": "bun scripts/build.ts",
    "start": "bun run src/server/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome lint src/",
    "lint:fix": "bunx @biomejs/biome lint --write src/"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@biomejs/biome": "2.3.11",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/state": "^6.5.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.12",
    "codemirror": "^6.0.2",
    "mermaid": "^11.12.2",
    "svg-pan-zoom": "^3.6.2"
  }
}